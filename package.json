{
  "name": "double-agent",
  "version": "1.0.1",
  "private": true,
  "description": "Double agent is a detection system for when an http request or browser interaction is not the user agent it says it is",
  "scripts": {
    "prepare": "husky install",
    "build": "tsc --build",
    "watch": "tsc -w",
    "docs": "node docs/generator",
    "start": "yarn workspace @double-agent/collect-controller start",
    "prod": "yarn workspace @double-agent/collect-controller prod",
    "clean": "tsc -b --clean",
    "lint": "eslint --cache ./"
  },
  "author": "Data Liberation Foundation",
  "license": "ISC",
  "engines": {
    "node": ">=14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@ulixee/repo-tools": "^1.0.3",
    "cookie": "^0.4.2"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.1",
    "@types/node": "^14.18.18",
    "husky": "^7.0.1",
    "lint-staged": "^10.2.11",
    "p-queue": "^6.2.1",
    "source-map-support": "^0.5.21",
    "typescript": "^4.5.5",
    "yamlparser": "0.0.x"
  },
  "workspaces": {
    "packages": [
      "analyze",
      "analyze/plugins/*",
      "collect",
      "collect/plugins/*",
      "collect-controller",
      "config",
      "docs",
      "real-user-agents",
      "tls-server",
      "runner",
      "stacks",
      "../agent/build/*",
      "../agent-plugins/*"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
